<%- include('header') %>

<div id="loginid" class="home">
    <div class="text-center center-div">
        <div class="container w-50 border py-5 bg-light">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login</h2>
                <span>Please enter your login and password!</span>
            </div>
            <form action="/route/login" method="post" class="pt-1">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password"><br>
                    <small>Don't have an account?</small>
                    <a href="/route/signup"><small class="text-primary">SignUp</small></a>
                </div>
                <button type="submit" class="btn btn-primary  mt-3 mb-3">Login</button>
        
                <div>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger mt-3">
                            <%= error %>
                        </div>
                    <% } else if (typeof logout !== 'undefined' && logout) { %>
                        <div class="alert alert-success mt-3">
                            <%= logout %>
                        </div>
                    <% } %>
                </div>
                
            </form>
        </div>
    </div>
</div>

<%- include('footer') %>

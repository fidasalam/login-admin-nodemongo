                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    
                </div>
                

                <div class="row my-5">
                    <h2 class=" mb-3">Delete User</h2>
                    <form action="/route/delete" method="post" class="pt-1">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="enter email" name="email"><br>
                           
                        </div>
                        
                        <button type="submit" class="btn btn-primary  mt-3 mb-3">Delete</button>
                    
                        <div>
                    <div class="col">
                        
                        <h4><%=locals.result %></h4>
                    </div>
                </div>

            </div>
        </div>

<!-- home.ejs -->

<%- include('header') -%>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom"><i
                    class=" me-2"></i>ADMIN 
                    <h6 class="text-lowercase"><%= locals.admin %></h6>
                </div>
                   
            <div class="list-group list-group-flush my-3">
                <a href="/route/adminhome" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                    class=" fas fa-users me-2"></i>User List </a>
                <a href="/route/search" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-search me-2"></i>Search User</a>
                <a href="/route/adduser" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-user-plus me-2"></i>Add User</a>
              
                <a href="/route/adminlogout" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Logout</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class=" primary-text fs-4 me-3" id="menu-toggle"></i>
                    
                </div>

                <div class="row my-5">
                    <h3 class="mb-3">Users List</h3>
                    <div class="col">
                        <table class="table bg-white rounded shadow-sm table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" width="50">#</th>
                                    <th scope="col">Firstname</th>
                                    <th scope="col">Lastname</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((user, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= user.firstname %></td>
                                        <td><%= user.lastname %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.phone %></td>
                                        <td>
                                            <a href="/route/updateuser/<%= user.id %>">
                                                <i class="fas fa-edit"></i> <!-- Edit Icon -->
                                            </a>
                                            <a href="/route/delete/<%= user.id %>" onclick="return confirmDelete()">
                                                <i class="fas fa-trash-alt"></i> <!-- Delete Icon -->
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
              
    <!-- /#page-content-wrapper -->
    </div>
<%- include('footer') -%>
